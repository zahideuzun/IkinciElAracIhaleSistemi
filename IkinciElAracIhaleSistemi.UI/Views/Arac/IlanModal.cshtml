@model IkinciElAracIhaleSistemi.Entities.VM.Arac.AracIlanVM

<div class="modal fade" id="ilanModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">İlan Bilgileri</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form method="post" action="/ilan/ekle">
					<input type="hidden" name="AracId" value="@Model.AracId" />
					<div class="form-group">
						<label for="baslik">Başlık:</label>
						<input type="text" class="form-control" name="Baslik" id="baslik" />
					</div>
					<div class="form-group">
						<label for="aciklama">Açıklama:</label>
						<textarea class="form-control" name="Aciklama" id="aciklama"></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Gönder</button>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
			</div>
		</div>
	</div>
</div>

