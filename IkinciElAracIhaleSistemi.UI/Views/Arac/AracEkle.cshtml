<script src="~/Scripts/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        var firmaSecimi = $('#FirmaId').parent().parent();
        var aracTuru = $('#AracTuruId');
        debugger
        if (aracTuru.val() == '2') {
            firmaSecimi.show();
        } else {
            firmaSecimi.hide();
        }

        aracTuru.change(function () {
            if (aracTuru.val() == '2') {
                firmaSecimi.show();
            } else {
                firmaSecimi.hide();
            }
        });
    });

    $(document).ready(function () {
        $('#MarkaId').change(function () {// Marka dropdown değiştiğinde
            var MarkaId = $(this).val(); // Seçilen marka Id değerini al
            if (MarkaId != '') { // Eğer boş değilse
                $.ajax({
                    url: '/Arac/ModelleriGetir', // Modelleri döndüren action metodu
                    type: 'POST',
                    data: { MarkaId: MarkaId }, // Seçilen marka Id değerini sunucuya gönder
                    success: function (data) { // Sunucudan gelen veriler
                        $('#ModelId').empty(); // Model dropdown'unu temizle
                        $('#ModelId').append($('<option>').text('Model').attr('value', '')); // Boş seçenek ekle
                        $.each(data, function (index, model) { // Modelleri döngü ile ekle
                            $('#ModelId').append($('<option>').text(model.Text).attr('value', model.Value));
                        });
                    },
                    error: function (xhr, textStatus, errorThrown) { // İsteğin başarısız olması durumunda hata mesajı göster
                        alert('Bir hata oluştu: ' + errorThrown);
                    }
                });
            }
        });
    });

</script>

