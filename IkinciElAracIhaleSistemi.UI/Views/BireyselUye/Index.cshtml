@model List<IkinciElAracIhaleSistemi.Entities.VM.BireyselUyeVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sira = 1;
}

@using (Html.BeginForm("Index", "BireyselUye", FormMethod.Get))
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bireysel Üyeler</h4>
                <a href="/BireyselUye/BireyselUyeEkle/" class="btn btn-outline-info float-md-right">Yeni Bireysel Üye Ekle</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
	                            <th>İsim Soyisim</th>
	                            <th>Telefon</th>
                                <th>Mail Adresi</th>
                                <th>Tc Kimlik No</th>
                                <th>Onay</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@sira</td>
                                    <td>@(item.Isim+" "+item.Soyisim)</td>
                                    <td>@item.Telefon</td>
                                    <td>@item.Mail</td>
	                                <td>@item.TcKimlik</td>
                                    @if (item.OnayliMi == "Onaylı")
                                    {
	                                    <td>@item.OnayliMi</td>
                                    }
                                    else
                                    {
                                <td><a href="/BireyselUye/BireyselUyeOnay/@item.UyeId" class="btn btn-outline-info">@item.OnayliMi</a></td>
                                    }

	                                <td><a href="/BireyselUye/BireyselUyeSil/@item.UyeId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/BireyselUye/BireyselUyeGuncelle/@item.UyeId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>

                                sira++;
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
}

